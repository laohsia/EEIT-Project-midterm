		<c:set var="sqlString" value="${sqlString}${type2}"></c:set>
		<c:set var="type2" value=" and Cata2 like N'%"></c:set>
	</c:forEach>
	<c:set var="ending" value=" group by E_name )P where c='${count}'"></c:set>
	<c:set var="sqlString" value="${sqlString}${ending}"></c:set>
</c:if>

	${sqlString}
	
<sql:setDataSource var="ds" dataSource="jdbc/TableGameDB" />
